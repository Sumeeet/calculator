# Normalize line endings
* text=auto

# Handle JavaScript files
*.js eol=lf

# Handle JSON files
*.json eol=lf

# Handle Markdown files
*.md text eol=lf

# Handle configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf

# Handle images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg text

# Handle other binary files
*.exe binary
*.dll binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
